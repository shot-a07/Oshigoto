<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-8 px-6 px-sm-0 mx-auto">
        <table class="table table-hover table-inverse">
          <% if @range == "User" %>
          <h2>User search for"<%= @word %>"</h2>
           <thead>
             <tr>
             <th></th>
             <th>Name</th>
             </tr>
           </thead>
           <tbody>
             <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
           </tbody>
          <% else %>
          <h2>Eat search for"<%= @word %>"</h2>
           <thead>
             <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             </tr>
           </thead>
           <tbody>
            <% @post_images.each do |post_image| %>
              <tr>
               <td><%= link_to user_path(post_image.user) do %>
                  <%= attachment_image_tag(post_image.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
                  <% end %>
                </td>
               <td><%= link_to post_image.title, post_image_path(post_image), class: "post_image_#{post_image.id}" %></td>
               <td><%= post_image.caption %></td>
             </tr>
            <% end %>
           </tbody>
          <% end %>
        
        </table>
    </div>
  </div>
</div>