<% if book.favorited_by?(current_user) %>
  <%= link_to post_image.favorites.count, post_image_favorites_path(book), method: :delete, remote: true, class: "fas fa-heart like-btn" %>
<% else %>
  <%= link_to post_image.favorites.count, post_image_favorites_path(book), method: :post, remote: true, class: "fas fa-heart " %>
  
<% end %>