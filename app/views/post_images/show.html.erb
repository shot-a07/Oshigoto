<div>
  <%= attachment_image_tag @post_image, :image, :fill, 400, 400 %>
      <p>題名：<%= @post_image.title %></p>
      <p>説明：<%= @post_image.caption %></p>
      <p>ユーザーネーム：<%= @post_image.user.name %></p>
      <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <!--　コメントの実装-->
  <% if @post_image.user == current_user %>
    <%= link_to "削除", post_image_path(@post_image), method: :delete %>
  <% end %>

</div>

<div>
    
    <div id='post_comment_list'>
        <% @post_image.post_comments.each do |post_comment| %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            <%= post_comment.user.name %>
            <%= post_comment.comment %>
            <% if post_comment.user == current_user %>
                <div>
                    <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, remote: true %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>

<div>
    <%= render 'post_comments/post_comment', post_image: @post_image, post_comment: @post_comment %>
</div>