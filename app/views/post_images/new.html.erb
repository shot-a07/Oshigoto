<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Post Form</h1>
        <%= form_with model: @post_image, local:true do |f| %>
          <h4>ImageUpdate</h4>
          <%= f.attachment_field :image %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Text</h4>
          <%= f.text_area :caption %>
          <%= f.submit 'Update', class: 'btn btn-secondary' %>
        <% end %>
    </div>
  </div>
</div>