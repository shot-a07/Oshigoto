<div class='container'>
  <div class='row user-edit'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>編集画面</h2>
        <%= form_with model:@post_image, local: true do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          <h4>本文</h4>
          <%= f.text_area :caption %>
          <p><%= f.submit '保存', class: "btn btn-primary" %></p>
        <% end %>

    </div>
  </div>
</div>