<div class="container container-m">
  <div class="row">

    <% @post_images.each do |post_image| %>
    <div class="col-md-3 img-hidden">
      <div>
          <%= link_to user_path(post_image.user.id) do %>
              <span><%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, class: 'img', fallback: "no_image.jpg", size: "60x60" %></span>
          <% end %>
          <strong>@<%= post_image.user.name %></strong>
      </div>

      <div>
        <%= link_to post_image_path(post_image.id) do %>

        <div class="Eat-img"><%= attachment_image_tag post_image, :image, :fill, 200, 200, class: 'post_img' %></div>
        <% end %>


          <p><%= post_image.title %></p>
          <p>説明：<%= post_image.caption %></p>
          <p>投稿者：<%= post_image.user.name %></p>
          <p id="favorite_buttons_<%= post_image.id %>"><%= render "favorites/favorite-btn", post_image: post_image %></p>
          <p><%= link_to "コメント#{post_image.post_comments.count}件", post_image_path(post_image.id) %>をすべて見る</p>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row pagination">
    <div class="col-lg-12 col-md-12 mb-12 text-center"><%= paginate @post_images %></div>
      <%= link_to :back do %>
        <button>戻る</button>
      <% end %>
  </div>
</div>